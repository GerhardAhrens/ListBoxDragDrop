<Window
    x:Class="ListBoxDragDrop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ListBoxDragDrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="{Binding Path=WindowTitel, FallbackValue=WindowTitel}"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Icon>
        <BitmapImage UriSource="pack://application:,,,/Resources/Picture/ApplicationIcon.png" />
    </Window.Icon>

    <Window.Resources>
        <sys:String x:Key="ampersand">&amp;</sys:String>
    </Window.Resources>

    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Width="100"
                Height="25"
                Content="Neu" />
        </StackPanel>

        <TextBlock Grid.ColumnSpan="3" FontSize="14">
            <Run Text="ListBox mit" />
            <Run Text="Drag" />
            <Run Text="{StaticResource ResourceKey=ampersand}" />
            <Run Text="Drop" />
        </TextBlock>

        <Rectangle
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Height="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Fill="Blue" />

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="5,0,0,5"
            BorderBrush="Black"
            BorderThickness="2,2,0.5,2">
            <ListBox
                x:Name="LbWorkItem"
                VerticalAlignment="Stretch"
                AllowDrop="True">
                <ListBox.Template>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True">
                            <Grid Height="20" DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Stretch"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Text="Alle Aufgaben"
                                    TextAlignment="Center" />
                                <Rectangle
                                    Grid.Row="0"
                                    Grid.ColumnSpan="3"
                                    Height="1"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Bottom"
                                    Fill="Blue" />
                            </Grid>
                            <ItemsPresenter />
                        </DockPanel>
                    </ControlTemplate>
                </ListBox.Template>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="3"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Text="{Binding Path=Titel}" />

                                <TextBlock Grid.Row="1" Grid.Column="0">
                                    <Run Foreground="Blue" Text="{Binding Path=Status}" />
                                    <Run Text="Start" />
                                    <Run FontWeight="Medium" Text="{Binding Path=WorkDate, StringFormat=d, ConverterCulture=de-DE}" />
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="1"
            Margin="0.5,0,0,5"
            BorderBrush="Black"
            BorderThickness="0,2,0,2">
            <ListBox
                x:Name="LbInArbeit"
                VerticalAlignment="Stretch"
                AllowDrop="True">
                <ListBox.Template>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True">
                            <Grid Height="20" DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Stretch"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Text="In Arbeit"
                                    TextAlignment="Center" />
                                <Rectangle
                                    Grid.Row="0"
                                    Grid.ColumnSpan="3"
                                    Height="1"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Bottom"
                                    Fill="Blue" />
                            </Grid>
                            <ItemsPresenter />
                        </DockPanel>
                    </ControlTemplate>
                </ListBox.Template>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="13"
                                FontWeight="Bold"
                                Text="{Binding Path=Titel}" />

                            <TextBlock Grid.Row="1" Grid.Column="0">
                                <Run Foreground="Orange" Text="{Binding Path=Status}" />
                                <Run Text="Start" />
                                <Run FontWeight="Medium" Text="{Binding Path=WorkDate, StringFormat=d, ConverterCulture=de-DE}" />
                            </TextBlock>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="2"
            Margin="0,0,5,5"
            BorderBrush="Black"
            BorderThickness="0.5,2,2,2">
            <ListBox
                x:Name="LbFertig"
                VerticalAlignment="Stretch"
                AllowDrop="True">
                <ListBox.Template>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True">
                            <Grid Height="20" DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Stretch"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Text="Fertig gestellt"
                                    TextAlignment="Center" />
                                <Rectangle
                                    Grid.Row="0"
                                    Grid.ColumnSpan="3"
                                    Height="1"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Bottom"
                                    Fill="Green" />
                            </Grid>
                            <ItemsPresenter />
                        </DockPanel>
                    </ControlTemplate>
                </ListBox.Template>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="13"
                                FontWeight="Bold"
                                Text="{Binding Path=Titel}" />

                            <TextBlock Grid.Row="1" Grid.Column="0">
                                <Run Foreground="Green" Text="{Binding Path=Status}" />
                                <Run Text="Start" />
                                <Run FontWeight="Medium" Text="{Binding Path=WorkDate, StringFormat=d, ConverterCulture=de-DE}" />
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>
